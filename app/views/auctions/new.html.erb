<h1>Create New Auction</h1>

<%= simple_form_for @auction do |f| %>
  <%= f.input :title, label: "Auction Item", input_html: {class: "small_field"}%>
  <%= f.input :details %>
  <%= f.input :reserve_price, as: :string %> <%# this is to tell it to use just a textbox rather than the usual number field. %>
  <%= f.input :end_date, as: :string, input_html: {id: "datepicker"} %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
